# Backend Environment Variables

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/boq_db"

# JWT Configuration
# CRITICAL: Use a strong random secret in production (minimum 32 characters)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-change-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
# For multiple origins in production, separate with comma
FRONTEND_URL="http://localhost:5173"

# Seed Admin Credentials (Development/Initial Setup Only)
